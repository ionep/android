<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="otbs.spartans.com.spartansotbs.MainActivity"
    android:background="#4fbdc6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ret"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/recieve"
            android:layout_below="@+id/code"
            android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/contact"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button android:id="@+id/tInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket Info"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/contact">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Ticket"
        android:id="@+id/book"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/tInfo" />

    <Button android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </Button>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket Number:"
        android:id="@+id/tickettext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ticket"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tickettext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code:"
        android:id="@+id/codetext"
        android:layout_below="@+id/ticket"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/code"
        android:layout_below="@+id/ticket"
        android:layout_toEndOf="@+id/tickettext" />
</RelativeLayout>