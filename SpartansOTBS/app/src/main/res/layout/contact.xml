<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#4fbdc6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/contact"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button android:id="@+id/tInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket Info"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/contact">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Ticket"
        android:id="@+id/book"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/tInfo" />

    <Button android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </Button>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Spartans Online Transport Booking System:\n
        1.Abin Maharjan\n
        2.Bipin Thapa Magar\n
        3.Rohit Kuinkel\n
        4.Prabesh Adhikari\n\n

        Mail us at spartans@spartans.com "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>